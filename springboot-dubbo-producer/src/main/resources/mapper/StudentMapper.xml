     #{sage, jdbcType = NUMERIC},
     #{ssex, jdbcType = VARCHAR},
     #{saddress, jdbcType = VARCHAR}
    )
   </insert>
   <delete id = "deleteStudent">
     delete student  where  id = #{id,jdbcType = NUMERIC}
   </delete>
</mapper>
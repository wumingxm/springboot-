<mapper namespace="com.spring.dubbo.dao.StudentDao">
   
   <sql id = "sql1">
   	   	 <trim prefix="where" prefixOverrides="and|or">
   	 	<if test="id!=null">
   	 		 and id = #{id,jdbcType=NUMERIC}
   	 	</if>
   	 	<if test="sname!=null">
   	 		and sname = #{sname,jdbcType=VARCHAR}
   	 	</if>
   	 	<if test="sage!=null">
   	 		and sage = #{sage,jdbcType=NUMERIC}
   	 	</if>
   	 	<if test="ssex!=null">
   	 		ssex = #{ssex,jdbcType=VARCHAR}
   	 	</if>
   	 	<if test="birthday!=null">
   	 		birthday = #{birthday,jdbcType=DATE}
   	 	</if>
   	 </trim>
   </sql>
   <select id ="findStudentList" resultType = "com.springboot.dubbo.vo.StudentVO">
   	 select id,
   	 		sname,
   	 		sage,
   	 		ssex,
   	 		birthday
   	 from student
   	 <include refid = "sql1"/>
   </select>
    <select id ="findStudentById" resultType = "com.springboot.dubbo.vo.StudentVO">
   	 select id,
   	 		sname,
   	 		sage,
   	 		ssex,
   	 		birthday
	from student
	where id = #{id,jdbcType=NUMERIC}
   </select>
